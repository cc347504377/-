<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Hello World!"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/pointx"
        android:layout_marginBottom="30dp"
        android:background="@drawable/point"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/pointsize"
        android:layout_height="@dimen/pointsize" />
    <TextView
        android:background="@drawable/point"
        android:layout_alignBaseline="@+id/pointx"
        android:layout_alignRight="@+id/pointx"
        android:layout_marginRight="@dimen/pointmargin"
        android:layout_width="@dimen/pointsize"
        android:layout_height="@dimen/pointsize" />
    <TextView
        android:background="@drawable/point"
        android:layout_alignBaseline="@+id/pointx"
        android:layout_alignLeft="@+id/pointx"
        android:layout_marginLeft="@dimen/pointmargin"
        android:layout_width="@dimen/pointsize"
        android:layout_height="@dimen/pointsize" />

    <TextView
        android:id="@+id/point"
        android:background="@drawable/pointbule"
        android:layout_alignBaseline="@+id/pointx"
        android:layout_alignRight="@+id/pointx"
        android:layout_marginRight="@dimen/pointmargin"
        android:layout_width="@dimen/pointsize"
        android:layout_height="@dimen/pointsize"
        />
</RelativeLayout>
